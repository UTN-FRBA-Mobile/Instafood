<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.instafood.activities.SearchRestaurantsActivity">

    <SeekBar
        android:id="@+id/seekBarRestaurant"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:max="100"
        app:layout_constraintBottom_toTopOf="@+id/areaBusquedaRestaurants"
        app:layout_constraintEnd_toStartOf="@+id/plusSignSeekRestaurant"
        app:layout_constraintStart_toEndOf="@+id/minusSignSeekRestaurant"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/minusSignSeekRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewSearchRestaurant"
        app:layout_constraintEnd_toStartOf="@+id/seekBarRestaurant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/minus_sign" />

    <ImageButton
        android:id="@+id/plusSignSeekRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewSearchRestaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekBarRestaurant"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plus_sign" />

    <TextView
        android:id="@+id/areaBusquedaRestaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="129dp"
        android:layout_marginStart="129dp"
        android:text="@string/buscar_restaurantes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarRestaurant" />

    <ScrollView
        android:id="@+id/scrollViewSearchRestaurant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areaBusquedaRestaurants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewSearchRestaurant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/minusSignSeekRestaurant" />
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
