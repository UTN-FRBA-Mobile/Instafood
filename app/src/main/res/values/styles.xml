<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item><!-- Color del texto de la barra -->

    </style>

    <style name="MainButton" >
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:elevation">30dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>
