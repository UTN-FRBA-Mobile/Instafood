<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.instafood.activities.SearchRestaurantsActivity">

    <SeekBar
        android:id="@+id/seekBarRestaurant"
        android:layout_width="245dp"
        android:layout_height="46dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewSearchRestaurant"
        app:layout_constraintEnd_toStartOf="@+id/plusSignSeekRestaurant"
        app:layout_constraintStart_toEndOf="@+id/minusSignSeekRestaurant" />

    <ImageButton
        android:id="@+id/minusSignSeekRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewSearchRestaurant"
        app:layout_constraintEnd_toStartOf="@+id/seekBarRestaurant"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/minus_sign" />

    <ImageButton
        android:id="@+id/plusSignSeekRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewSearchRestaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekBarRestaurant"
        app:srcCompat="@drawable/plus_sign" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSearchRestaurant"
        android:layout_width="368dp"
        android:layout_height="468dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minusSignSeekRestaurant" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="163dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="7dp"
        android:text="@string/buscar_restaurantes"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewSearchRestaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarRestaurant" />
</android.support.constraint.ConstraintLayout>
